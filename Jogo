	public static void Digita(String mensagem, TimeUnit unit, long tempo_mensagem) throws InterruptedException {
	        for (char caractere : mensagem.toCharArray()) {
	        System.out.print(caractere);
	        unit.sleep(tempo_mensagem);
	        
	}
